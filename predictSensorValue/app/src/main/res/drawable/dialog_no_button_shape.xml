<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#AD382F" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#E14B40" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <solid
                android:color="#E14B40" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

</selector>