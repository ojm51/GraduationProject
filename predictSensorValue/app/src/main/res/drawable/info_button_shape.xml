<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#77A93E" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="50dp"
                android:right="50dp"/>
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#8BC34A" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="50dp"
                android:right="50dp"/>
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <solid
                android:color="#8BC34A" />
            <corners
            android:radius="15dp" />
            <padding
                android:left="50dp"
                android:right="50dp"/>
        </shape>
    </item>

</selector>